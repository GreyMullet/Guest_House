{
  "compilerOptions": {
    "composite": true,                 
    "module": "ESNext",               
    "target": "ESNext",              
    "lib": ["ESNext"],                
    "strict": true,            
    "skipLibCheck": true,         
    "esModuleInterop": true,          
    "moduleResolution": "node",         
    "outDir": "./dist",        
    "baseUrl": "./src",          
    "paths": {
      "@app/*": ["src/app/*"],
      "@pages/*": ["src/pages/*"],
      "@widgets/*": ["src/widgets/*"],
      "@features/*": ["src/features/*"],
      "@entities/*": ["src/entities/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": ["src/**/*", "vite.config.ts"],
  "exclude": ["node_modules"]         
}
