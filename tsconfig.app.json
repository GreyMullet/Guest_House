{
  "compilerOptions": {
    "composite": true,                  
    "module": "ESNext",                
    "target": "ESNext",                  
    "lib": ["DOM", "ESNext"],           
    "jsx": "react-jsx",                  
    "esModuleInterop": true,           
    "moduleResolution": "node",          
    "strict": true,                      
    "skipLibCheck": true,                
    "forceConsistentCasingInFileNames": true, 
    "outDir": "./dist",                  
    "baseUrl": "./src",               
    "paths": {
      "@app/*": ["src/app/*"],
      "@pages/*": ["src/pages/*"],
      "@widgets/*": ["src/widgets/*"],
      "@features/*": ["src/features/*"],
      "@entities/*": ["src/entities/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": ["src/**/*"],               
  "exclude": ["node_modules"]          
}
